<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComparisonEngineUI.Views.AboutPage"
             xmlns:vm="clr-namespace:ComparisonEngineUI.ViewModels"
             Title="About">

    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="We are dedicated to providing accurate and fast information to ensure the cheapest drinking experience possible!" TextColor="Black" HorizontalTextAlignment="Center"/>
            <Button Text="Map Page" Command="{Binding OpenMap}"/>
        </StackLayout>
    </ContentPage.Content>

</ContentPage>