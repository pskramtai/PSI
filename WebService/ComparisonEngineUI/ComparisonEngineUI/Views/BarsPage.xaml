<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComparisonEngineUI.Views.BarsPage">
    <ContentPage.Content>
        <StackLayout>
            <SearchBar Placeholder="Search Bars..." />
            <Label TextColor="Black" Text="Bar List:"
                VerticalOptions="Center" 
                HorizontalOptions="Center"/>
            <ListView ItemsSource="{Binding BarList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Button Text="{Binding BarName}" Clicked="Button_Clicked"/>
                            </StackLayout>  
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Edit" Command="{Binding EditBarCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>