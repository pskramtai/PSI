<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComparisonEngineUI.Views.DrinksPage">
    <ContentPage.Content>
        <StackLayout>
            <SearchBar Placeholder="Search Drinks..." />
            <Label TextColor="Black" Text="Drink List:"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Button Text="Edit" Command="{Binding EditDrinkCommand}"/>
            <ListView ItemsSource="{Binding DrinkList}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Button Text="{Binding DrinkName}" Command="{Binding DrinkButtonCommand}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>