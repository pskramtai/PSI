<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComparisonEngineUI.Views.AddBarPage"
             Title="Add a Bar">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="barName" Placeholder="Enter Bar Name" PlaceholderColor="Black" TextColor="Black"/>
            <Entry x:Name="barAdress"  Placeholder="Enter Bar Location" PlaceholderColor="Black" TextColor="Black"/>
            <Button Text="Save" Clicked="OnSaveClicked" Command="{Binding SaveCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>