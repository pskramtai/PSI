<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComparisonEngineUI.Views.EditPage">
    <ContentPage.Content>
        <StackLayout>
            <Label TextColor="Black" Text="Here you will be able to edit drink or bar information"
                VerticalOptions="Center" 
                HorizontalOptions="Center" />
            <Button Text="Edit Drink Price" Command="{Binding EditDrinkPriceCommand}"/>
            <Button Text="Add Drink" Command="{Binding AddDrinkCommand}"/>
            <Button Text="Add Bar" Command="{Binding AddBarCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>