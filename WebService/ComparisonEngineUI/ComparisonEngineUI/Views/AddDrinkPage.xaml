<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ComparisonEngineUI.Views.AddDrinkPage">
    <ContentPage.Content>
        <StackLayout>
            <Picker x:Name="selectedBar"
                    Title="Select Bar"
                    TitleColor="Red"
                    ItemsSource ="{Binding BarList} "
                    ItemDisplayBinding="{Binding BarName} " />
            <Entry x:Name ="drinkName" Placeholder="Enter Drink Name" PlaceholderColor="Black"/>
            <Entry x:Name ="EntryDrinkPrice" Placeholder="Enter Price" PlaceholderColor="Black" Keyboard="Numeric"/>
            <Button Text="Save" Clicked ="SaveButtonClicked" Command="{Binding SaveCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>